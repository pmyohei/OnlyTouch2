<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- フレーム1 -->
    <!-- 物理空間 -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/gl_view_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <!-- フレーム2 -->
    <!-- 画面下部UI -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 左：各種操作メニューの説明  -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/root_explanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingBottom="10dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/touch_message"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/explanation_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_action_camera_mdpi_holo"
                    android:alpha="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/explanation_camera_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/menu_explanation_margin"
                    android:text="@string/fluid_bottom_menu_contents_camera"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/explanation_camera"
                    app:layout_constraintStart_toEndOf="@+id/explanation_camera"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/explanation_regeneration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/menu_explanation_line_spacing"
                    android:background="@drawable/ic_action_dice1_mdpi_holo"
                    android:alpha="0.5"
                    app:layout_constraintTop_toBottomOf="@+id/explanation_camera"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/menu_explanation_line_spacing"
                    android:layout_marginStart="@dimen/menu_explanation_margin"
                    android:text="@string/fluid_bottom_menu_contents_regeneration"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/explanation_regeneration"
                    app:layout_constraintStart_toEndOf="@+id/explanation_regeneration"
                    app:layout_constraintTop_toBottomOf="@+id/explanation_camera" />


                <ImageView
                    android:id="@+id/explanation_gravity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/menu_explanation_line_spacing"
                    android:background="@drawable/ic_action_phone_mdpi_holo"
                    android:alpha="0.5"
                    app:layout_constraintTop_toBottomOf="@+id/explanation_regeneration"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/menu_explanation_line_spacing"
                    android:layout_marginStart="@dimen/menu_explanation_margin"
                    android:text="@string/fluid_bottom_menu_contents_gravity"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/explanation_gravity"
                    app:layout_constraintStart_toEndOf="@+id/explanation_gravity"
                    app:layout_constraintTop_toBottomOf="@+id/explanation_regeneration" />


                <ImageView
                    android:id="@+id/explanation_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/menu_explanation_line_spacing"
                    android:background="@drawable/ic_action_location_mdpi_holo"
                    android:alpha="0.5"
                    app:layout_constraintTop_toBottomOf="@+id/explanation_gravity"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/menu_explanation_line_spacing"
                    android:layout_marginStart="@dimen/menu_explanation_margin"
                    android:text="@string/fluid_bottom_menu_contents_pin"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/explanation_pin"
                    app:layout_constraintStart_toEndOf="@+id/explanation_pin"
                    app:layout_constraintTop_toBottomOf="@+id/explanation_gravity" />

                <ImageView
                    android:id="@+id/explanation_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/menu_explanation_line_spacing"
                    android:background="@drawable/ic_action_goleft_mdpi_holo"
                    android:alpha="0.5"
                    app:layout_constraintTop_toBottomOf="@+id/explanation_pin"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/menu_explanation_line_spacing"
                    android:layout_marginStart="@dimen/menu_explanation_margin"
                    android:text="@string/fluid_bottom_menu_contents_return"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/explanation_home"
                    app:layout_constraintStart_toEndOf="@+id/explanation_home"
                    app:layout_constraintTop_toBottomOf="@+id/explanation_pin" />

            </android.support.constraint.ConstraintLayout>

            <!-- 左：メッセージ  -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/touch_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingStart="20dp"
                android:paddingBottom="14dp"
                app:layout_constraintTop_toBottomOf="@id/root_explanation"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/text_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/meun_title_picture"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/text_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fluid_bottom_message"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/text_primary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <!-- 右：操作アイコン -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/bottom_menu_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 展開後メニュー -->
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/bottom_menu_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingTop="1dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="@drawable/bottom_design"
                    android:alpha="1.0"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/bottom_menu_init">

                    <ImageButton
                        android:id="@+id/other_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/ic_action_camera"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ImageButton
                        android:id="@+id/regeneration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/ic_action_dice1"
                        app:layout_constraintTop_toBottomOf="@id/other_picture"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageButton
                        android:id="@+id/pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/ic_action_phone"
                        app:layout_constraintTop_toBottomOf="@id/regeneration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageButton
                        android:id="@+id/gravity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/ic_action_location"
                        app:layout_constraintTop_toBottomOf="@id/pin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageButton
                        android:id="@+id/return_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/ic_action_goleft"
                        app:layout_constraintTop_toBottomOf="@id/gravity"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <!-- 展開前メニュー -->
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/bottom_menu_init"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="@drawable/bottom_init_design"
                    android:alpha="1.0"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:text="@string/fluid_bottom_menu_contents_init"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- サイズ(横幅)をメニュー本体と一致させるために定義している。そのため、表示はしない) -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_action_dummy"
                        android:visibility="invisible"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
