<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/frame_dialog">

    <TextView
        android:id="@+id/tv_softTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:text="@string/dialog_how_to_touch_title"
        android:textColor="@color/dialog_title_tx"
        android:textSize="@dimen/dialog_title_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_procedure_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_procedure_1"
        android:layout_width="260px"
        android:layout_height="260px"
        android:layout_marginTop="12dp"
        android:background="@drawable/help_procedure_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_softTitle"
        app:layout_constraintBottom_toTopOf="@+id/tv_procedure_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_procedure_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/dialog_help_procedure_1"
        android:textColor="@color/dialog_message_tx"
        android:textSize="@dimen/dialog_message_size"
        app:layout_constraintTop_toBottomOf="@+id/iv_procedure_1"
        app:layout_constraintBottom_toTopOf="@+id/iv_procedure_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_procedure_2"
        android:layout_width="320px"
        android:layout_height="320px"
        android:layout_marginTop="32dp"
        android:background="@drawable/help_procedure_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_procedure_1"
        app:layout_constraintBottom_toTopOf="@+id/tv_procedure_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_procedure_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="20dp"
        android:text="@string/dialog_help_procedure_2"
        android:textColor="@color/dialog_message_tx"
        android:textSize="@dimen/dialog_message_size"
        app:layout_constraintTop_toBottomOf="@+id/iv_procedure_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>